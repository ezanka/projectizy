
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  members      Member[]
  taskMembers     TaskMember[]
  invitations  Invitation[]
  projects     Project[]
  tasks        Task[]
  createdTasks  Task[]     @relation("TaskCreatedBy")
  updatedTasks  Task[]     @relation("TaskUpdatedBy")
  comments      Comment[]
  taskLogs      TaskLog[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

enum OrganizationType {
    personal
    education
    company
    other
}

enum OrganizationPlan {
    free
    pro
}

enum status {
    active
    inactive
    suspended
}

model Organization {
    id          String       @id @default(cuid())
    name        String
    slug        String?
    logo        String?
    type        OrganizationType        @default(personal)
    plan       OrganizationPlan        @default(free)
    createdAt   DateTime    @default(now())
    metadata    String?
    status      status       @default(active)
    members     Member[]
    invitations Invitation[]
    projects    Project[]

    @@unique([slug])
    @@map("organization")
}

enum MemberRole {
    OWNER
    ADMIN
    MEMBER
    VIEWER
}

model Member {
    id             String       @id @default(cuid())
    organizationId String
    organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
    userId         String
    user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
    role           MemberRole
    createdAt      DateTime     @default(now())

    @@map("member")
}

model Invitation {
    id             String       @id @default(cuid())
    organizationId String
    organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
    email          String
    role           MemberRole?
    status         String
    expiresAt      DateTime
    inviterId      String
    user           User         @relation(fields: [inviterId], references: [id], onDelete: Cascade)

    @@map("invitation")
}

enum projectStatus {
    TODO
    inProgress
    done
}

enum ProjectPriority {
    low
    medium
    high
}

model Project {
    id           String           @id @default(cuid())
    workspaceSlug  String
    workspace    Organization        @relation(fields: [workspaceSlug], references: [slug], onDelete: Cascade)

    name         String
    slug         String
    description  String?
    startDate    DateTime?
    dueDate      DateTime?
    priority     ProjectPriority?
    coverImage   String?

    createdAt    DateTime         @default(now())
    updatedAt    DateTime         @default(now()) @updatedAt

    userId       String
    user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)

    status       projectStatus    @default(TODO)

    providers    Provider[]
    tasks        Task[]

    @@unique([workspaceSlug, slug])

    @@map("project")
}


enum TaskStatus {
    TODO
    IN_PROGRESS
    REVIEW
    BLOCKED
    DONE
    CANCELED
}

enum TaskPriority {
    NONE
    LOW
    MEDIUM
    HIGH
    URGENT
}

enum TaskType {
    TASK
    BUG
    FEATURE
    CHORE
}

model Comment {
    id         String   @id @default(cuid())
    taskId     String
    authorId   String
    body       String   @db.Text
    createdAt  DateTime @default(now())
    editedAt   DateTime?

    task       Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
    author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

    @@index([taskId, createdAt])
}

model Task {
    id          String   @id @default(cuid())

    projectId   String
    project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

    slug            String
    title           String
    description     String?      @db.Text
    type            TaskType     @default(TASK)
    status          TaskStatus   @default(TODO)
    priority        TaskPriority @default(NONE)

    startAt         DateTime?
    dueAt           DateTime?
    completedAt     DateTime?
    archived        Boolean     @default(false)
    archivedAt      DateTime?

    assignedTo  String?
    user        User?    @relation(fields: [assignedTo], references: [id], onDelete: SetNull)

    deadline    DateTime?

    progress    Int?       @default(0)

    createdAt   DateTime @default(now())
    createdById     String?
    createdBy       User?        @relation("TaskCreatedBy", fields: [createdById], references: [id], onDelete: SetNull)
    
    updatedAt   DateTime @default(now()) @updatedAt
    updatedById     String?
    updatedBy       User?        @relation("TaskUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull)

    comments    Comment[]
    taskLogs    TaskLog[]
    subTasks    SubTask[]
    taskMembers     TaskMember[]

    @@index([projectId])
    @@index([status, priority])
    @@index([dueAt])
    @@unique([projectId, slug], map: "task_project_slug_unique")
}

enum TaskMemberRole {
    ADMIN
    EDITOR
    VIEWER
}

model TaskMember {
    id             String       @id @default(cuid())
    taskId String
    task   Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
    userId         String
    user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
    role           TaskMemberRole
    createdAt      DateTime     @default(now())

    @@map("taskMember")
}

model TaskLog {
    id        String   @id @default(cuid())
    taskId    String
    userId    String
    minutes   Int
    note      String?
    startedAt DateTime @default(now())

    task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([taskId, startedAt])
    @@index([userId, startedAt])
}

model SubTask {
    id        String   @id @default(cuid())
    taskId    String
    title     String
    done      Boolean  @default(false)
    orderIndex Int     @default(0)
    doneAt    DateTime?

    task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

    @@index([taskId, orderIndex])
}

enum ProviderName {
    github
    figma
    notion
}

model Provider {
    id        String   @id @default(cuid())
    name      ProviderName
    url       String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt

    projectId String
    project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

    @@unique([name, projectId])
    @@map("provider")
}
